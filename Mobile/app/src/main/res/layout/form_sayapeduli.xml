<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/primary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_scan"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            >
            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/donation_item_wrapper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="right"
                                    android:orientation="horizontal" >
                                    <TextView
                                        android:id="@+id/id_pekurban_dt"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:padding="6dp"
                                        android:text="id laporan"
                                        android:textStyle="bold"
                                        android:textColor="#2e7d32"
                                        android:background="@drawable/corneryellow"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_gravity="right|center"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/textView1"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/whitesmof" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_weight="5.59"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp">

                                    <ImageView
                                        android:background="@drawable/date1"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="40sp"
                                        android:id="@+id/imgLebar"
                                        android:textStyle="normal|bold"
                                        android:fontFamily="sans-serif" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_below="@+id/confren"
                                        android:layout_weight="5.59"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/tgl_upload"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="20dp"
                                            android:text="01/01/2017"
                                            android:textStyle="bold"
                                            android:gravity="center|left"
                                            android:textSize="15sp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            android:layout_toEndOf="@+id/imgjarak"
                                            android:fontFamily="serif" />
                                    </LinearLayout>
                                </LinearLayout>
                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/textView1"
                                    android:background="@color/dim_foreground_dark" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/line1"
                                    android:layout_width="match_parent"
                                    android:layout_weight="5.59"
                                    android:layout_marginTop="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp">

                                    <ImageView
                                        android:background="@drawable/user1"
                                        android:layout_marginLeft="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="40sp"
                                        android:textStyle="normal|bold"
                                        android:fontFamily="sans-serif" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:id="@+id/line6"
                                        android:layout_width="wrap_content"
                                        android:gravity="left|center"
                                        android:layout_marginLeft="2dp"
                                        android:layout_weight="5.59"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="Email Pelapor"
                                            android:textStyle="bold"
                                            android:textSize="16sp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            />
                                        <TextView
                                            android:id="@+id/nama_pelapor"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="8dp"
                                            android:hint="No Name"
                                            android:textSize="16sp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            android:layout_toEndOf="@+id/imgjarak"
                                            android:fontFamily="serif" />
                                    </LinearLayout>

                                </LinearLayout>
                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/textView1"
                                    android:layout_marginTop="13dp"
                                    android:background="@color/dim_foreground_dark"
                                    />
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_weight="5.59"
                                    android:layout_marginTop="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp">

                                    <ImageView
                                        android:background="@drawable/maps"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="40sp"
                                        android:textStyle="normal|bold"
                                        android:fontFamily="sans-serif" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:gravity="left|center"
                                        android:layout_marginLeft="2dp"
                                        android:layout_weight="5.59"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="Lokasi Sampah"
                                            android:textStyle="bold"
                                            android:textSize="16sp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            />
                                        <EditText
                                            android:id="@+id/lokasi_dt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="8dp"
                                            android:hint="-"
                                            android:textSize="16sp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            android:layout_toEndOf="@+id/imgjarak"
                                            android:fontFamily="serif" />
                                        />
                                    </LinearLayout>


                                </LinearLayout>
                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/textView1"
                                    android:layout_marginTop="13dp"
                                    android:background="@color/dim_foreground_dark"
                                    android:visibility="visible"/>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_weight="5.59"
                                    android:layout_marginTop="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp">

                                    <ImageView
                                        android:background="@drawable/kuantitas34"
                                        android:layout_marginLeft="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="40sp"
                                        android:textStyle="normal|bold"
                                        android:fontFamily="sans-serif" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:gravity="left|center"
                                        android:layout_marginLeft="2dp"
                                        android:layout_weight="5.59"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="Estimasi Berat (KG)"
                                            android:textStyle="bold"
                                            android:textSize="16sp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            />
                                        <EditText
                                            android:id="@+id/estimasi"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="8dp"
                                            android:hint="-"
                                            android:textSize="16sp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            android:layout_toEndOf="@+id/imgjarak"
                                            android:fontFamily="serif" />
                                        />
                                    </LinearLayout>


                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/line8"
                                    android:layout_width="match_parent"
                                    android:layout_weight="5.59"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:visibility="gone">

                                    <ImageView
                                        android:background="@drawable/maps"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="40sp"
                                        android:textStyle="normal|bold"
                                        android:fontFamily="sans-serif"
                                        />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:id="@+id/line2"
                                        android:layout_width="wrap_content"
                                        android:layout_below="@+id/confren"
                                        android:gravity="left"
                                        android:layout_weight="5.59"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="Longtitude"
                                            android:textStyle="bold"
                                            android:gravity="center|left"
                                            android:textSize="15sp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            android:layout_toEndOf="@+id/imgjarak"
                                            />
                                        <TextView
                                            android:id="@+id/longtitude"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="3dp"
                                            android:text="-"
                                            android:textSize="15sp"
                                            android:textColor="@color/primary"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            android:layout_toEndOf="@+id/imgjarak"
                                            android:fontFamily="serif"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="Latitude"
                                            android:textStyle="bold"
                                            android:gravity="center|left"
                                            android:textSize="15sp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            android:layout_toEndOf="@+id/imgjarak"
                                            />
                                        <TextView
                                            android:id="@+id/latitude"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="3dp"
                                            android:text="-"
                                            android:textSize="15sp"
                                            android:textColor="@color/primary"
                                            android:layout_alignParentBottom="true"
                                            android:layout_toRightOf="@+id/imgjarak"
                                            android:layout_toEndOf="@+id/imgjarak"
                                            android:fontFamily="serif"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/textView1"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/dim_foreground_dark" />
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_weight="5.59"
                                    android:layout_height="match_parent"
                                    android:paddingBottom="20dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="50dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10.5dp"
                                        android:layout_marginTop="20dp"
                                        android:text="Foto Lokasi :"
                                        android:textColor="#333"
                                        android:textSize="16sp" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:id="@+id/ftsblm_a"
                                                android:layout_width="150dp"
                                                android:layout_height="150dp"
                                                android:layout_marginLeft="10dp"
                                                android:src="@drawable/ic_camera_gray"
                                                android:scaleType="fitXY"
                                                android:layout_marginTop="5dp" />

                                        </LinearLayout>


                                 </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btnStyleShakespeare"
        android:layout_alignParentBottom="true"
        android:text="Send Report"
        android:layout_marginBottom="3dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginRight="3.5dp"
        android:layout_marginLeft="3.5dp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/send" />
</android.support.design.widget.CoordinatorLayout>

